@model IEnumerable<OnlineCourses.Entities.MediaType>

@{
    ViewData["Title"] = "Media Types";
}

<!-- Page Title -->
<div class="row mb-4">
    <div class="col-md-12 d-flex justify-content-between align-items-center">
        <h1 class="mb-0"><i class="fas fa-video"></i> Media Types</h1>
        <partial name="_CreateButtonPartial" model="0" />
    </div>
</div>

<!-- Media Types Table -->
<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="fas fa-list"></i> Media Types List</h4>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ThumbnailImagePath)
                    </th>
                    <th scope="col"><i class="fas fa-cogs"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            <img src="@item.ThumbnailImagePath" alt="@item.Title" class="img-thumbnail" style="max-width: 100px;" />
                        </td>
                        <td>
                            <partial name="_RUDButtonsPartial" model="@item.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
