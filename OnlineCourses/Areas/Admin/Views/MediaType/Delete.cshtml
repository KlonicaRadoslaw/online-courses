@model OnlineCourses.Entities.MediaType

@{
    ViewData["Title"] = "Delete Media Type";
}

<!-- Page Title -->
<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="mb-0"><i class="fas fa-trash-alt"></i> Delete Media Type</h1>
    </div>
</div>

<!-- Confirmation Container -->
<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirm Delete</h4>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this?</h5>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ThumbnailImagePath)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ThumbnailImagePath)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
