@model IEnumerable<OnlineCourses.Entities.Category>
@using OnlineCourses.Extensions

<!-- Page Title -->
<h3 class="mt-4"><i class="fas fa-users"></i> Add Members to Category</h3>
<hr />

<!-- Form to Add Members to Category -->
<form id="MembersToCategory" asp-action="Index">
    <div class="row mb-3">
        <!-- Category Selection -->
        <div class="col-md-4">
            <div class="form-group">
                <label for="CategoryId" class="form-label"><i class="fas fa-tags"></i> Category</label>
                <select id="CategoryId" name="CategoryId" class="form-select" asp-items="Model.ConvertToSelectList(1)">
                    <option value="0">--Please choose a Category--</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Alert Placeholder -->
    <div id="alert_placeholder"></div>
    <hr />

    <div class="row mb-3">
        <!-- Users List -->
        <div class="col-md-10">
            <h4><i class="fas fa-users-cog"></i> Members</h4>
            <div id="UsersCheckList">
                <partial name="_UsersListViewPartial" model="new UsersCategoryListModel { CategoryId=0, Users=null, UsersSelected=null }" />
            </div>
        </div>
    </div>

    <hr />

    <!-- Save Button -->
    <div class="row mb-3">
        <div class="col-md-10">
            <div class="text-end">
                <button type="button" id="SaveSelectedUsers" name="SaveSelectedUsers" class="btn btn-outline-info">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>
        </div>
    </div>
</form>

<!-- Progress Indicator -->
<div class="progress collapse" id="progress_indicator">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-info text-white" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%; height: 100%;">
        <span class="fs-4">Saving Data...</span>
    </div>
</div>

<!-- Success Alert -->
<div class="alert alert-success alert-dismissible collapse text-center fs-4" role="alert" id="success_alert">
    <i class="fas fa-check-circle"></i> The Data has been saved successfully!!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

@section Scripts {
    <script src="~/js/userstocategory.js"></script>
    <script src="~/js/bootstrapalerts.js"></script>
}
