@model IEnumerable<OnlineCourses.Entities.Category>

@{
    ViewData["Title"] = "Categories";
}

<!-- Page Title -->
<div class="row">
    <div class="col-md-12 d-flex justify-content-between align-items-center">
        <h1 class="mb-0">Categories</h1>
        <partial name="_CreateButtonPartial" model="0" />
    </div>
</div>

<!-- Categories Table -->
<table class="table table-hover mt-4">
    <thead class="thead-light">
        <tr>
            <th scope="col"><i class="fas fa-book-open"></i> @Html.DisplayNameFor(model => model.Title)</th>
            <th scope="col"><i class="fas fa-align-left"></i> @Html.DisplayNameFor(model => model.Description)</th>
            <th scope="col"><i class="fas fa-image"></i> Thumbnail</th>
            <th scope="col"><i class="fas fa-cogs"></i> Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span class="text-dark">@Html.DisplayFor(modelItem => item.Title)</span>
                </td>
                <td>
                    <span class="text-muted">@Html.DisplayFor(modelItem => item.Description)</span>
                </td>
                <td>
                    <img src="@item.ThumbnailImagePath" alt="@item.Title" class="img-thumbnail" style="max-width: 100px;" />
                </td>
                <td>
                    <!-- Buttons for Edit/Delete -->
                    <partial name="_RUDButtonsPartial" model="@item.Id" />

                    <!-- Update Items Button -->
                    <a asp-controller="CategoryItem" asp-action="Index" asp-route-categoryId="@item.Id" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-edit"></i> Update Items
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
