@model OnlineCourses.Entities.Category

@{
    ViewData["Title"] = "Create Category";
}

<!-- Page Title -->
<div class="row mb-4">
    <div class="col-md-12">
        <h1>Create Category</h1>
    </div>
</div>

<!-- Form Container -->
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4>Create New Category</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Title Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Enter Category Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Description Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" rows="3" class="form-control" placeholder="Enter Category Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Thumbnail Image Path Field -->
                    <div class="form-group mb-3">
                        <label asp-for="ThumbnailImagePath" class="form-label"></label>
                        <input asp-for="ThumbnailImagePath" class="form-control" placeholder="Enter Thumbnail Image Path" />
                        <span asp-validation-for="ThumbnailImagePath" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Back to List Link -->
<div class="row mt-4">
    <div class="col-md-8 offset-md-2">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
