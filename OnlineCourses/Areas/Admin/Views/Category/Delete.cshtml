@model OnlineCourses.Entities.Category

@{
    ViewData["Title"] = "Delete Category";
}

<!-- Page Title -->
<div class="row mb-4">
    <div class="col-md-12">
        <h1>Delete Category</h1>
    </div>
</div>

<!-- Confirmation Prompt -->
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h4>Confirm Deletion</h4>
            </div>
            <div class="card-body">
                <h5 class="text-warning">Are you sure you want to delete this?</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="fas fa-tag"></i> @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-sm-4">
                        <i class="fas fa-align-left"></i> @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-4">
                        <i class="fas fa-image"></i> @Html.DisplayNameFor(model => model.ThumbnailImagePath)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ThumbnailImagePath)
                    </dd>
                </dl>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
