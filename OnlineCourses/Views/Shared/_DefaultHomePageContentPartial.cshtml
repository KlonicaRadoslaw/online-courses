@using OnlineCourses.Entities

@model IEnumerable<Category>

<!--Hero Section-->
<div class="hero section">
    <img class="img-fluid" src="~/Images/HeroImage.jpeg" alt="Hero Image">
    <div class="hero-heading position-absolute top-50 start-50 translate-middle text-center">
        <h2 class="hero-heading-text">Learn Software Engineering at <strong>Online Courses</strong></h2>
        <a id="HeroRegisterButton" class="btn btn-outline-info btn-lg text-light hero-register-button">Register</a>
    </div>
</div>

<hr class="section-divider" />

<!--Courses Section-->
<div id="Courses" class="courses section">
    <h3 class="section-header">Courses</h3>
    @{
        var count = Model.Count() / 4;
        var catList = new List<Category>();
    }
    @for (int i = 0; i <= count; i++)
    {
        catList = Model.Skip(i * 4).Take(4).ToList();

        <div class="row mt-3">
            @foreach (Category item in catList)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <a href="#" class="text-dark text-decoration-none">
                        <div class="card h-100">
                            <img class="card-img-top" src="@item.ThumbnailImagePath" alt="@item.Title">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>

<hr class="section-divider" />

<!--Contact Us Section-->
<div id="ContactUs" class="contact-us section">
    <h3 class="section-header">Contact Us</h3>
    <div class="col-md-6 mb-4">
        Email us any questions or inquiries or call 518-387-9999. We would be happy to answer your questions and set up a meeting with you.
    </div>
    <div class="row mt-3">
        <div class="col-md-8">
            <form>
                <input type="hidden" />
                <div class="mb-3">
                    <label for="Name" class="form-label">Name:</label>
                    <input id="Name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Email:</label>
                    <input id="Email" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="Subject" class="form-label">Subject:</label>
                    <input id="Subject" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="MessageBody" class="form-label">Message:</label>
                    <textarea id="Messagebody" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <div class="d-flex">
                    <input type="button" value="Send Email" class="btn btn-outline-info ms-auto" />
                </div>
            </form>
        </div>
    </div>
</div>

<hr class="section-divider" />

<!--About Us Section-->
<div id="AboutUs" class="about-us section">
    <h3 class="section-header">About Us</h3>
    <div class="mt-3 mb-5">
        <div class="col-md-6">
            <p>
                <strong>Online Courses</strong> provides articles and courses on programming topics. We started in 1998 and continue to provide high-quality tech content to our members.
            </p>
        </div>
    </div>
</div>
