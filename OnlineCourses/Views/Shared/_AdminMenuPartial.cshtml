@using Microsoft.AspNetCore.Identity
@using OnlineCourses.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Admin
        </a>
        <ul class="dropdown-menu" aria-labelledby="adminDropdown">
            <li>
                <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">
                    <i class="fas fa-box me-2"></i>Categories
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-area="Admin" asp-controller="UsersToCategory" asp-action="Index">
                    <i class="fas fa-users me-2"></i>Users to Category
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <a class="dropdown-item" asp-area="Admin" asp-controller="MediaType" asp-action="Index">
                    <i class="fas fa-file-video me-2"></i>Media Types
                </a>
            </li>
        </ul>
    </li>
}
else if (!SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="#Courses">
            <i class="fas fa-laptop-code me-1 text-info"></i>Courses
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="#ContactUs">
            <i class="fas fa-phone-alt me-1 text-info"></i>Contact Us
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="#AboutUs">
            <i class="fas fa-chalkboard-teacher me-1 text-info"></i>About Us
        </a>
    </li>
}
