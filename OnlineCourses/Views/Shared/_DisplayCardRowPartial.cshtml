@model IEnumerable<Category>

@if (Model.Count() > 0)
{
    <div class="row mt-3">
        @foreach (Category item in Model)
        {
            <div class="col-lg-3 col-md-6 mb-4">
                <a href="#" class="RegisterLink text-dark text-decoration-none" data-categoryId="@item.Id">
                    <div class="card h-100 shadow-sm">
                        <img class="card-img-top img-fluid" src="@item.ThumbnailImagePath" alt="@item.Title">
                        <div class="card-body">
                            <h5 class="card-title text-center fw-bold">@item.Title</h5>
                            <p class="card-text text-muted">@item.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
