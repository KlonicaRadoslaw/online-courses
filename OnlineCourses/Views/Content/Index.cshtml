@using OnlineCourses.Entities
@model Content

<!-- Content Title -->
<h2>@Model.Title</h2>

<!-- HTML Content Section -->
@if (Model.HTMLContent != null)
{
    <div class="row">
        <div id="TextContent" class="mt-3 col-md-10">
            @Html.Raw(Model.HTMLContent)
        </div>
    </div>
}

<!-- Video Content Section -->
@if (Model.VideoLink != null)
{
    <div class="row">
        <div class="mt-3 col-md-10">
            <div id="VideoContent" class="ratio ratio-16x9 mt-3">
                <iframe src="@Model.VideoLink" allowfullscreen frameborder="0"></iframe>
            </div>
        </div>
    </div>
}
